<ul>

<% bookmarks.each do |bookmark| %>
<li>
  <%= link_to(bookmark.title, bookmark.url) + " | " + bookmark.category + " | " +link_to("show", bookmark_path(bookmark.id)) %>
</li>

<% end %>
</ul>

<%= form_tag("/bookmarks/filter") do %>
  <%= select_tag(:filter_id, options_for_select([["none", 3],[Bookmark::CATEGORIES[0], 0],[Bookmark::CATEGORIES[1],1], [Bookmark::CATEGORIES[2],2]])) %>
  <%= submit_tag("Filter") %>
<%end%>
