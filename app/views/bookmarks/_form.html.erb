<%= form_for bookmark do |f| %>
  <%= f.label :url %> <br>
  <%= f.text_field :url %>
  <br>
  <%= f.label :title %> <br>
  <%= f.text_area :title %>
  <br>
  <%= f.label :comment %> <br>
  <%= f.text_field :comment %>
  <br>
  <%= f.select(:category, options_for_select(Bookmark::CATEGORIES)) %>
  <br>
  <%= f.check_box :is_favorite %>
  <%= f.label(:is_favorite, "Favorite") %>
  <br>


  <%= f.submit %>
<% end %>
